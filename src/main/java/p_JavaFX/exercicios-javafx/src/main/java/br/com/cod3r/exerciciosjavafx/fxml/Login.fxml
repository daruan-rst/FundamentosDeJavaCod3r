<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml"
fx:controller="br.com.cod3r.exerciciosjavafx.fxml.LoginControlador">

    <Label text="Seja bem vindo"
    GridPane.columnIndex="0" GridPane.rowIndex="0"></Label>

    <Label text="E-mail: "
           GridPane.columnIndex="0" GridPane.rowIndex="1"></Label>
    <TextField fx:id="campoEmail"
            GridPane.columnIndex="1" GridPane.rowIndex="1">

    </TextField>

    <Label text="Senha: "
           GridPane.columnIndex="0" GridPane.rowIndex="2"></Label>
    <PasswordField text="campoSenha"
            GridPane.columnIndex="1" GridPane.rowIndex="2">

    </PasswordField>

    <Button text="Entrar"
            GridPane.columnIndex="0" GridPane.rowIndex="3"
    onAction="#entrar">

    </Button>

</GridPane>
